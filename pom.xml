    <modelVersion>4.0.0</modelVersion>
    <groupId>com.wineshop</groupId>
    <artifactId>shop-admin</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
  
    <properties>
        <flex.framework.version>4.5.1.21328</flex.framework.version>
        <flexmojos.version>4.0-RC2</flexmojos.version>
    
        <graniteds.version>2.3.1.GA</graniteds.version>
    
        <springframework.version>3.0.6.RELEASE</springframework.version>
        <spring.security.version>3.0.7.RELEASE</spring.security.version>
    
        <hibernate.version>3.6.9.Final</hibernate.version>
        <hibernate.validator.version>4.2.0.Final</hibernate.validator.version>
    
        <context.root>/shop-admin</context.root>
    </properties>

    <repositories>
        <!-- Repository for flex mojos libs -->
        <repository>
            <id>flex-mojos-repository</id>
            <url>http://repository.sonatype.org/content/groups/flexgroup/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>
    
    <pluginRepositories>
        <!-- Repository for flex mojos plugin -->
        <pluginRepository>
            <id>flex-mojos-plugin-repository</id>
            <url>http://repository.sonatype.org/content/groups/flexgroup/</url>
            <releases> 
                <enabled>true</enabled>
            </releases>
            <snapshots> 
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>
  <modules>
    <module>java</module>
    <module>flex</module>
    <module>webapp</module>
  </modules>
</project>